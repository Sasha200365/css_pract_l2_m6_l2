    />

    <meta
      name='viewport'
      content='viewport-fit=cover, width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no'
    />

  </head>

  <body>
    <div class='page page--dashboard text'>
      <aside class='page__aside aside vertical vertical--big'>
        <div class="text aside__logo ">Sidebar</div>
        <nav class="vertical vertical--small">
          <a href="#" class="nav_button nav_button--active click">
            <span class="icon nav_button__icon" style="background-image: url('/svg/nav/home.svg')"></span>
            <span class="text text--light">Home</span>
          </a>

          <a href="#" class="nav_button click">
            <span class="icon nav_button__icon" style="background-image: url('/svg/nav/aside_orders.svg')"></span>
            <span class="text text--light">Orders</span>
          </a>

          <a href="#" class="nav_button click">
            <span class="icon nav_button__icon" style="background-image: url('/svg/nav/aside_products.svg')"></span>
            <span class="text text--light">Products</span>
          </a>          
        </nav>
      </aside>

      <header class='header'>

        <div class="layout header__content text--small">
          <div class="header__search relative">
           <input type="text" placeholder="Search" class="text field field--header">
           <span class="icon header__icon-search" style="background-image: url('/svg/header/search.svg')">
           </span>
            <span class="icon header__icon-settings icon--button icon--color-blue click" 
            style="background-image: url('/svg/header/settings.svg')">
            </span>           
          </div>
          <div class="header--icon-right">
            <span class="icon header__icon-wifi icon--button icon--color-yeloow click" 
              style="background-image: url('/svg/header/wifi.svg')">
            </span>
            <span class="icon header__icon-china icon--button icon--color-lblue click" 
              style="background-image: url('/svg/header/china.svg')">
            </span>
            <span class="icon header__icon-bell icon--button icon--color-yeloow click" 
              style="background-image: url('/svg/header/bell.svg')">
            </span>
          </div>
        </div>
         
      </header>

      <main class="main">
          <div class="layout">
            <section class="box analytic__block">
              <div class="analytic analityc--double analytic--blue">
                <span class="icon analytic__button icon--button icon--color-blue click" 
                    style="background-image: url('/svg/main/order.svg')">
                </span>
                <div class="relative vertical vertical--small">
                  <div class="analytic__title text text--light">$961</div>
                  <div class="text text--small text--lighter">Total Order</div>
                  <span class="icon analytic__arrow icon--button click" 
                    style="background-image: url('/svg/main/arr_up.svg')">
                </span>
                </div>
              </div>

              <div class="analytic analityc--double analityc--purple">
                  <span class="icon analytic__button icon--button icon--color-purple click" 
                    style="background-image: url('/svg/main/konvert.svg')">
                </span>
                <div class="relative vertical vertical--small">
                  <div class="analytic__title text text--light">$500.00</div>
                  <div class="text text--small text--lighter">Total earning</div>
                  <span class="icon analytic__arrow icon--button click" 
                    style="background-image: url('/svg/main/arr_up.svg')">
                </span>
                </div>
              </div>

              <div class="analytic analytic--small analytic--blue">
                <span class="icon analytic__button icon--button icon--color-blue click" 
                    style="background-image: url('/svg/main/konvert.svg')">
                </span>
                <div class="relative vertical vertical--small">
                  <div class="analytic__titlesmall text text--light">$203k</div>
                  <div class="text text--small text--lighter">Total Income</div>             
                </div>
              </div>

              <div class="analytic analytic--small analytic--white">
                <span class="icon analytic__button icon--button icon--color-yeloow click" 
                    style="background-image: url('/svg/main/tort.svg')">
                </span>
                <div class="relative vertical vertical--small">
                  <div class="analytic__titlesmall text text--black">$203k</div>
                  <div class="text text--small text--blacklight">Total Income</div>             
                </div>
              </div>
            </section>
          </div>
        
        <section class="main__bottom-all">        
          <div class="main__bottom">
            <div class="purchase__block ">
              <h1 class=" divider text--heading ">Purchase list</h1>
                <div class="purchase1__elememts vertical--small">
                  
                  <div>ID437661</div>
                  <div>AirOn ProCam</div>
                  <div>132.32 EUR</div>
                  <div>Customer</div>
                  <div>May 11, 2023, 14:21</div>
                  <div>7/8 USB Type-C</div>
                  <div class="color--warning">Not paid</div>
                  <div>robin@com.de</div>
                </div>

                <div class="purchase2__elememts vertical--small">
                  
                  <div>ID437661</div>
                  <div>PHILIPS Essential</div>
                  <div>543 USD</div>
                  <div>Customer</div>
                  <div>May 11, 2023, 14:21</div>
                  <div>HD9200/90</div>
                  <div class="color--sucсess">Pay by  Stripe</div>
                  <div>dima@com.ua</div>
                </div>
            </div>

              <div class="payment__block">
                <h1 class="purchase__header divider text--heading ">Payment</h1>
                <div class="payment__elememts">
                
                  <fieldset class="payment vertical--small text--payment">
                      <div>
                        <input type="radio" checked>
                        <label for="huey">Credit card</label>
                      </div>

                      <div>
                        <input type="radio" >
                        <label for="dewey">Debit card</label>
                      </div>

                      <div>
                        <input type="radio" >
                        <label for="louie">PayPal</label>
                      </div>
                  </fieldset>

                    <div class="inputs__payment text--payment divider">
                      <div>
                          <label class="payment--label">Name on card</label>
                          <input  type="text" placeholder="" class="text text--payment field field--header">
                      </div>
                      <div>
                          <label class="payment--label">Credit card number</label>
                          <input  type="text" placeholder="" class="text field field--header">
                      </div>
                      <div>
                          <label class="payment--label">Expiration</label>
                          <input  type="text" placeholder="" class="text field field--header">
                      </div>
                      <div>
                          <label class="payment--label">CVV</label>
                          <input  type="text" placeholder="" class="text field field--header">
                      </div>
                    </div>

                      <div class="blockselect">
                        <div>
                            <label class="vertical--small text text--payment select--label">Country</label>
                            <div class="relative click ">
                              <div class="field field--select relative">                     
                                <span class="text text--payment">Choose...</span>
                                <span class="icon main__icon-bird click" style="background-image: url('/svg/main/bird.svg')"></span>
                              </div>
                              <select class="field__select">
                                <option value="dog">Dog</option>
                                <option value="cat">Cat</option>
                                <option value="hamster">Hamster</option>
                                <option value="parrot">Parrot</option>
                                <option value="spider">Spider</option>
                              </select>
                            </div>
                        </div>
                        
                        <div>
                          <label class="vertical--small text text--payment select--label">State</label>
                            <div class="relative click ">
                              <div class="field field--select relative">
                                <span class="text text--payment">Choose...</span>
                                <span class="icon main__icon-bird click" style="background-image: url('/svg/main/bird.svg')"></span>
                              </div>
                                <select class="field__select">
                                  <option value="dog">Dog</option>
                                  <option value="cat">Cat</option>
                                  <option value="hamster">Hamster</option>
                                  <option value="parrot">Parrot</option>
                                  <option value="spider">Spider</option>
                                </select>
                            </div>
                          </div>
                      </div>
            
                   <button class=" btn payment nav_button nav_button--active text--light text click">Continue to checkout
                </div>
              </div>            
          </div>
        </section>        
      </main>
    </div>
  </body>

</html>