

     
<header class='header' >
  <div class="">
    {{> logo}}    
  </div>

  <nav class='header_nav'>
    <div class="header_nav_right">
     {{> nav list=header}}
    </div>
  </nav>
</header>

  {{#with hero}}
    <div class="hero">
      <div class="hero_content">
        <h1 class="hero_title">
          {{title}}
        </h1>
        <p class="hero_text">
          {{text}}
        </p>
      </div>      
      <img class="hero_image" src='{{photo}}' alt='Hero_image'>  
    </div>
  {{/with}}

  <main class="blog">
    Blog
  </main>
  
  <div class="form">
    singIn
  </div>
   
<footer class="footer">
  <div>
    {{> logo}}
    <span class='footer_copyright'>Copyright 2023-2024</span>
  </div>        
  {{#each footer}}
    <div>
      <span class="footer_title">
        {{title}}
      </span>
      {{> nav list=links isVertical=true}}
    </div>
  {{/each}}
</footer>

