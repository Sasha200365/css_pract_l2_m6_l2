<header class='header' >
  <a href="#test">
    {{> logo}}    
  </a>

  <nav class='header_nav'>
    <div class="header_nav_right">
     {{> nav list=header}}
    </div>
  </nav>
</header>

<main class="main">
    {{#with info}}
    <div class="main_info">
      <h1 class="info_title">{{title}}</h1>
      <p class="info_description">{{description}}</p>
    </div>
    {{/with}}

    {{#with form}}
    <form class="form">
    
        <div class="form_input_list">
          {{#each inputs}}
              <input type='{{type}}' placeholder='{{placeholder}}' 
              class="form_input" name="{{name}}" id="form_input-{{id}}">
          {{/each}}
        </div>
        <div class="form_checkbox_block">
          <input type="checkbox" name="{{checkbox.name}}">
          <label>{{checkbox.label}}</label>
        </div>
      <button type='submit' class="form_button">{{button}}</button>
      <p class="form_info">{{info}}</p>
    </form> 
    {{/with}}
  </main>

    <div class="updates">
  {{#with updates}}
   <h1 class="updates_title">{{title}}</h1>
  
    {{#each list}}
    <div class="list_table">
    <div class="list_box">
    {{> box_img}}
    </div>
    
     <div class="updates_content">
    <p class="list_nickname">{{nickname}}</p>
    <span class="list_description">{{description}}</span>
    
    </div>
    </div>
    {{/each}}
    
    <div class="show_all">
      <a href="{{show_all.url}}" class="show_all_link">{{show_all.text}}</a>
    </div>
  {{/with}}
  </div>
 
 <div class="expirience">
  <div class="expirience_title">{{expirience.title}}</div>
  <div class="expirience_badge">{{expirience.badge}}</div>
  
 <div class="expirience_card"> 
  {{#with expirience}}
     
      {{#each list}}
     <div class="expirience_list">
      <div class="list_name">{{name}}</div>
      <div class="list_details">{{details}}</div>
     </div>
      {{/each}}
      
      
    
  {{/with}}
  </div>
  </div>
 
  






   
